generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model configuracao {
  id_cof             Int     @id @default(autoincrement())
  distanciatempo_cof Int
  statustempo_cof    Int
  usu_id             Int
  usuario            usuario @relation(fields: [usu_id], references: [id_usu], onDelete: NoAction, onUpdate: NoAction)
}

model fatec {
  id_fac               Int       @id @default(autoincrement())
  nome_fac             String    @db.VarChar(100)
  sigla_fac            String?   @default("NULL") @db.VarChar
  categoria_fac        String?   @default("NULL") @db.VarChar
  tipo_instituicao_fac String?   @default("NULL") @db.VarChar
  municipio_fac        String    @default("NULL") @db.VarChar
  usuario              usuario[]
}

model relatorio {
  id_rel          Int     @id @default(autoincrement())
  nomeonibus_rel  String  @db.VarChar(100)
  atrasado_rel    Int
  adiantado_rel   Int
  mediaespera_rel String  @db.Char(4)
  usu_id          Int
  usuario         usuario @relation(fields: [usu_id], references: [id_usu], onDelete: NoAction, onUpdate: NoAction)
}

model usuario {
  id_usu       Int            @id @default(autoincrement())
  email_usu    String         @unique @db.VarChar(100)
  senha_usu    String         @db.VarChar(100)
  fac_id       Int
  created_at   DateTime       @default(now()) @db.Timestamp(6)
  nome_usu     String         @default("") @db.VarChar(100)
  token_usu    String?        @db.VarChar(100)
  configuracao configuracao[]
  relatorio    relatorio[]
  fatec        fatec          @relation(fields: [fac_id], references: [id_fac], onDelete: NoAction, onUpdate: NoAction)
}
