generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model configuracao {
  id_cof             Int      @id
  distanciatempo_cof Int
  statustempo_cof    Int
  usu_id             Int?
  usuario            usuario? @relation(fields: [usu_id], references: [id_usu], onDelete: NoAction, onUpdate: NoAction)
}

model fatec {
  id_fac   Int       @id
  name_fac String?   @db.VarChar(100)
  usuario  usuario[]
}

model relatorio {
  id_rel          Int      @id
  nomeonibus_rel  String   @db.VarChar(100)
  atrasado_rel    Int
  adiantado_rel   Int
  mediaespera_rel String   @db.Char(4)
  usu_id          Int?
  usuario         usuario? @relation(fields: [usu_id], references: [id_usu], onDelete: NoAction, onUpdate: NoAction)
}

model usuario {
  id_usu       Int            @id @default(autoincrement())
  email_usu    String         @unique @default("") @db.VarChar(100)
  nome_usu     String         @default("Desconhecido") @db.VarChar(100)
  senha_usu    String         @default("") @db.VarChar(100)
  fac_id       Int?
  created_at   DateTime       @default(now()) @db.Timestamp(6)
  configuracao configuracao[]
  relatorio    relatorio[]
  fatec        fatec?         @relation(fields: [fac_id], references: [id_fac], onDelete: NoAction, onUpdate: NoAction)
}

model exibicao {
  id_exib      String     @id @default(uuid()) // aceitei esse experimento do gemini, mas poderia ser @id @default(autoincrement()) tranquilamente
  id_usu       Int        // Chave estrangeira para ligar ao usuário
  usuario      usuario    @relation(fields: [id_usu], references: [id_usu])
  codigo_exib  String     @unique // O código gerado de 6 dígitos
  nome_exibicao String?   // Um nome opcional
  created_at   DateTime   @default(now()) @db.Timestamp(6)
  last_update  DateTime   @default(now()) @db.Timestamp(6)
  // Adiciona a relação: Uma exibição tem VÁRIAS paradas associadas
  paradas      exibicao_parada[]
}

model exibicao_parada {
  id_exib_parada     Int @id @default(autoincrement())
  id_exib            String   // Chave estrangeira para ligar à exibição
  exibicao           exibicao @relation(fields: [id_exib], references: [id_exib])
  codigo_parada      String   // O código da parada SPTrans (Ex: "650004840") 
  // Garante que a mesma parada não seja adicionada duas vezes na *mesma* exibição
  @unique([id_exibicao, codigo_parada])
}